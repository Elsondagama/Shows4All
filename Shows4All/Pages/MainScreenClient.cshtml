<header>
    <nav class="show-navigation">
        <!-- Show Navigation barn-->
    </nav>
</header>


<div class="text-center">
    <div class="mainText">
    <!--  Comentário: CSS Geral da Aplicação definido em site.css -->
        <h1 class="display-4">Bem-Vindo ao Shows4All</h1>
        <h3> Continua a ver as tuas séries!  </h3>
        <div class="container">
            <div class= "row">
                <div class="col-12 mb-5 mt-5">
                    <!--  Comentário: Usando o boostrap usamos a default class "containter"
                                      Usamos col-3, porque no boostrap o website é devidido em 12 "espaços"
                                            e queremos ter 4 series displayed.
                                      mb = Margin e  mt = Margin -->
                    <div class=" w-100 row makeYourOwnDiv">
                        <!--  Comentário: Esta class vai ser o Design Geral das Series.
                                          w = width -->


                        @foreach (var serie in Model.seriesDoCliente)
                        {
                            var imagePath = "/images/" + (serie.imageURL + ".jpg");
                            <div class="col-3">
                                <!--  Comentário: Perguntei ChatGPT como fazer imagens terem sempre o mesmo tamanho. -->
                                <!-- Make the image clickable and link to the SerieInfo page with SerieId and ClientID-->
                                <a asp-page="Checkout/SerieInfo" asp-route-seriesId="@serie.Id" asp-route-clientID="@Model.ClienteModelAtual.Id">
                                    <img src="@imagePath" class="img-fluid" style="max-width: 100%; height: auto;" alt="@serie.SerieName">
                                </a>
                                <h3> @serie.SerieName  </h3>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3> Compra uma nova série!  </h3>
        <div class="col-12 mb-5 mt-5">
            <!--  Comentário: Usando o boostrap usamos a default class "containter"
                                Usamos col-3, porque no boostrap o website é devidido em 12 "espaços"
                                    e queremos ter 4 series displayed.
                                mb = Margin e  mt = Margin -->
            <div class=" w-100 row makeYourOwnDiv">
                <!--  Comentário: Esta class vai ser o Design Geral das Series.
                                                w = width -->

                    @foreach (var serie in Model.todasAsSeriesNaoCompradasPeloCliente)
                    {
                        var imagePath = "/images/" + (serie.imageURL + ".jpg");
                        <div class="col-3">
                            <!--  Comentário: Perguntei ChatGPT como fazer imagens terem sempre o mesmo tamanho. -->
                            <img src="@imagePath" class="img-fluid" style="max-width: 100%; height: auto;" alt=@serie.SerieName>
                            <h3> @serie.SerieName  </h3>
                        </div>
                    }

            </div>
        </div>
</div>

